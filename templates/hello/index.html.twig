{% extends 'base.html.twig' %}

{% block body %}
  <div>
    {% if messages|length > 0 and limit > 0 %}
      {% for key,message in messages|slice(0,limit) %}
        <div>
          <a href="{{ path('app_show_one_message', { id: key }) }}" target="_blank">{{ message.message }}</a>
        </div>
        {{ include('hello/_message.html.twig', {message: message}) }}
      {% endfor %}
    {% else %}
      <div>There's nothing here!</div>
    {% endif %}
  </div>
{% endblock %}