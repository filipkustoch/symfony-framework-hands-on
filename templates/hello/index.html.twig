{% extends 'base.html.twig' %}

{% block body %}
  <div>
    {% if messages|length > 0 and limit > 0 %}
      {% for message in messages|slice(0,limit) %}
        <div>{{ message.message }}</div>
        {{ include('hello/_message.html.twig', {message: message}) }}
      {% endfor %}
    {% else %}
      <div>There's nothing here!</div>
    {% endif %}
  </div>
{% endblock %}